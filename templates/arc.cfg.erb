[common]
hostname="<%= fqdn %>"
nodecpu="<%= node_cpu %>"
resource_location="<%= resource_location %>"
mail="<%= mail %>"

x509_user_key="/etc/grid-security/hostkey.pem"
x509_user_cert="/etc/grid-security/hostcert.pem"
x509_cert_dir="/etc/grid-security/certificates"
gridmap="/etc/grid-security/grid-mapfile"
lrms="<%= lrms %>"

[grid-manager]
user="root"
controldir=""<%= control_dir %>""
sessiondir=""<%= session_dir %>""
debug="3"
logfile="/var/log/grid/grid-manager.log"
pidfile="/var/run/arc/grid/grid-manager.pid"
mail="<%= mail %>"
joblog="/var/log/grid/gm-jobs.log"

[gridftpd]
user="root"
debug="3"
logfile="/var/log/grid/gridftpd.log"
pidfile="/var/run/arc/grid/gridftpd.pid"
port="2811"
allowunknown="no"

[gridftpd/jobs]
path="/jobs"
plugin="jobplugin.so"
allownew="yes"

[infosys]
user="root"
overwrite_config="yes"
port="2135"
debug="1"
slapd_loglevel="0"
registrationlog="/var/log/infosys/inforegistration.log"
providerlog="/var/log/infosys/infoprovider.log"
provider_loglevel="2"
## infosys_glue2 - Enables GLUE2 schema
infosys_glue2_ldap="enable"

[infosys/admindomain]
name="<%= domain_name %>"

[cluster]
cluster_alias="MINIMAL Computing Element"
comment="This is a minimal out-of-box CE setup"
homogeneity="True"
architecture="adotf"
nodeaccess="inbound"
nodeaccess="outbound"

[queue/fork]
name="fork"
fork_job_limit="cpunumber"
homogeneity="True"
scheduling_policy="FIFO"
comment="This queue is nothing more than a fork host"
nodecpu="adotf"
architecture="adotf"
