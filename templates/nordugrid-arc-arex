/var/log/arc/grid-manager.log {
  missingok
  compress
  delaycompress
  daily
  rotate 14
  create
  postrotate
	kill -HUP `cat <%= @run_directory %>/grid-manager.pid 2> /dev/null` 2> /dev/null || true
  endscript
}

