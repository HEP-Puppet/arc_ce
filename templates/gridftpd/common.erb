[gridftpd]
user = <%= @user %>:<%= @group %>
loglevel = <%= @gridftpd_loglevel %>
logfile = <%= @logfile %>
pidfile = <%= @pidfile %>
port = <%= @port %>
allowencryption = <%= @allowencryption ? 'yes' : 'no' %>
allowactivedata = <%= @allowactivedata ? 'yes' : 'no' %>
maxconnections = <%= @maxconnections %>
defaultbuffer = <%= @defaultbuffer %>
maxbuffer = <%= @maxbuffer %>
globus_tcp_port_range = <%= @globus_tcp_port_range.join(',') %>
globus_udp_port_range = <%= @globus_udp_port_range.join(',') %>
<% unless @firewall.nil? -%>
firewall = <%= @firewall %>
<% end -%>
x509_host_key = <%= @x509_host_key %>
x509_host_cert = <%= @x509_host_cert %>
x509_cert_dir = <%= @x509_cert_dir %>

