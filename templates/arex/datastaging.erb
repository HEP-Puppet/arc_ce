[arex/data-staging]
loglevel = <%= @ds_loglevel %>
<% unless @logfile.nil? -%>
logfile = <%= @logfile %>
<% end -%>
statefile = <%= @statefile %>
usehostcert = <%= @usehostcert ? 'yes' : 'no' %>
maxtransfertries = <%= @maxtransfertries %>
passivetransfer = <%= @passivetransfer ? 'yes' : 'no' %>
globus_tcp_port_range = <%= @globus_tcp_port_range.join(',') %>
globus_udp_port_range = <%= @globus_udp_port_range.join(',') %>
httpgetpartial = <%= @httpgetpartial ? 'yes' : 'no' %>
<% unless @speedcontrol.nil? -%>
speedcontrol = <%= @speedcontrol %>
<% end -%>
maxdelivery = <%= @maxdelivery %>
maxprocessor = <%= @maxprocessor %>
maxemergency = <%= @maxemergency %>
maxprepared = <%= @maxprepared %>
<% unless @sharepolicy.nil? -%>
sharepolicy = <%= @sharepolicy %>
<% end -%>
<% @sharepriority.keys.sort.each do |sp| %>
sharepriority = <%= sp %> <%= @sharepriority[sp] %>
<% end -%>

